<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGoalActivity"
    android:background="@drawable/bg1">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Add New Goal"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <EditText
        android:background="#30ffffff"
        android:padding="20dp"
        android:hint="New Goal"
        android:textColorHint="@color/teal_700"
        android:id="@+id/text_goal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/text_date1"
        android:layout_width= "170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="8dp"
        android:text="Select Deadline"
        android:textAlignment = "center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:onClick="openDatePicker"
        android:textColor="@color/blue"
        android:padding="15dp"
        />

    <Button
        android:id="@+id/submit_1"
        android:layout_width= "170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="238dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="8dp"
        android:text="Save Goal"
        android:textAlignment = "center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:onClick="updateText1"
        android:textColor="@color/blue"
        android:padding="15dp"
        />

    <Button
        android:id="@+id/text_status1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_below="@id/submit_1"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:text="Complete Goal"
        android:onClick="complete_goal1"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:padding="15dp"
        />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="Back to Home"
        android:layout_below="@id/text_status1"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:padding="15dp"
        />

</RelativeLayout>