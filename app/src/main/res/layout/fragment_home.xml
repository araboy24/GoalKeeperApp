<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">
    

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="My Goals"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/text_goal1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:text="Goal 1"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/text_date1"
        android:layout_width= "170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="8dp"
        android:text="Date"
        android:textAlignment = "center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:onClick="openDatePicker"
        />

    <Button
        android:id="@+id/submit_1"
        android:layout_width= "170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="238dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="8dp"
        android:text="Save"
        android:textAlignment = "center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:onClick="updateText1"
        />

    <Button
        android:id="@+id/text_status1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="8dp"
        android:text="Complete Goal"
        android:onClick="complete_goal1"
        />
</RelativeLayout>